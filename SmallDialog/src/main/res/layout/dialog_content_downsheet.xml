<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/downSheet_header_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/bgdialog_center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/downSheet_title_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/textColor_downSheet_title"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/downSheet_msg_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:gravity="center"
            android:text="内容"
            android:textColor="@color/textColor_downSheet_msg"
            android:textSize="14dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/downSheet_content_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <TextView
        android:id="@+id/downSheet_Cancel_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgdialog_downsheet_footer"
        android:clickable="true"
        android:gravity="center"
        android:textColor="@color/textColor_alert_button"
        android:textSize="18sp"
        android:textStyle="bold"/>

</LinearLayout>